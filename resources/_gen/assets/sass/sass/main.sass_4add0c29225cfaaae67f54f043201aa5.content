@font-face{font-display:swap;font-family:new york;font-weight:400;src:url(../assets/fonts/new-york.woff)format("woff")}@font-face{font-display:swap;font-family:simpel;font-weight:400;src:url(../assets/fonts/simpel.woff)format("woff")}*,*::before,*::after{box-sizing:border-box;margin:0;padding:0}ul{list-style:none;padding:0;margin:0}button{appearance:none;background:0 0;border:none;border-radius:none;cursor:pointer;user-select:none}img{max-width:100%}body{font-family:simpel;-moz-osx-font-smoothing:grayscale;-webkit-font-smoothing:antialiased;font-size:1rem;font-variant-ligatures:common-ligatures;text-rendering:optimizelegibility;line-height:1.5rem}a,a:visited{color:#fff;text-decoration-color:#fff}h1,h2{font-family:new york;font-weight:400}h1{font-size:calc(1.5rem + 3vw)}@media(min-width:1200px){h1{font-size:3.75rem}}.nav-accessibility{padding:1.5rem;position:absolute;transform:translateY(calc(-100%))}.nav-accessibility li{display:inline-block;margin-right:.3125rem}.nav-accessibility:focus-within{position:relative;transform:translateY(0)}body>header{border-bottom:1px solid rgba(255,255,255,.1);padding:1.5rem 0}body{background-image:url(../assets/images/background.svg);background-position:50%;background-repeat:no-repeat;background-size:cover;background-attachment:fixed;color:#fff;min-height:200vh;position:relative}.container{margin-left:auto;margin-right:auto;max-width:123.75rem;padding-left:calc(2.5rem/2);padding-right:calc(2.5rem/2);width:100%;padding-left:5rem;padding-right:5rem}.projects__page ul.project-categories{display:flex;align-items:center}.projects__page ul.project-categories li{background:#1a1a40;padding:5px 10px}.projects__page ul.project-categories li+li{margin-left:10px}.projects__page ul.project-categories li a{-webkit-background-clip:text;-webkit-text-fill-color:transparent;background-image:linear-gradient(90deg,#C40C20 0%,#1E59BC 50%,#39ACEF 100%);text-decoration:none}